{
    "openapi": "3.0.0",
    "info": {
        "title": "Stoxtech Admin API",
        "version": "1.0.0"
    },
    "paths": {
        "/admin/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Auth User",
                "operationId": "0000595c89318605a085f8278dfb593f",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AuthUserResponse"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ValidationError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/admin/auth/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "User Logout",
                "operationId": "623a31a6ecbba78e4ee88edad388b138",
                "responses": {
                    "200": {
                        "description": "success"
                    },
                    "401": {
                        "description": "Unauthorized Error"
                    }
                }
            }
        },
        "/admin/auth/user": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Authorized user data",
                "operationId": "3b211723942663a3046347a8b9f9004a",
                "responses": {
                    "200": {
                        "description": "success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AuthUserResource"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized Error"
                    }
                }
            }
        },
        "/admin/auth/forget-password": {
            "post": {
                "tags": [
                    "Forget"
                ],
                "summary": "Send Reset Password Token",
                "operationId": "212329c887ce235d8381524c68ebd655",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "202": {
                        "description": "success"
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ValidationError"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/admin/auth/reset-password/{token}": {
            "post": {
                "tags": [
                    "Forget"
                ],
                "summary": "Reset Password Link",
                "operationId": "2ada68af24e912b99fc5b58c90b0040f",
                "parameters": [
                    {
                        "name": "token",
                        "in": "path",
                        "description": "Reset Password Token",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "password_confirmation": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "202": {
                        "description": "success"
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ValidationError"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/admin/auth/login/{provider}": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "OAuth provider login endpoint",
                "operationId": "d7faf6de8b626da990c15a2ab1615605",
                "parameters": [
                    {
                        "name": "provider",
                        "in": "path",
                        "description": "OAuth provider name",
                        "schema": {
                            "type": "string",
                            "example": "google"
                        }
                    }
                ],
                "responses": {
                    "302": {
                        "description": "Redirects to Google auth"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Role": {
                "type": "object"
            },
            "AuthUser": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "first_name": {
                        "type": "string"
                    },
                    "last_name": {
                        "type": "string"
                    },
                    "permissions": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "role": {
                        "$ref": "#/components/schemas/Role"
                    }
                },
                "type": "object"
            },
            "AuthUserCollection": {
                "properties": {
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/AuthUser"
                        }
                    },
                    "meta": {
                        "$ref": "#/components/schemas/Meta"
                    }
                },
                "type": "object"
            },
            "AuthUserResource": {
                "properties": {
                    "data": {
                        "$ref": "#/components/schemas/AuthUser"
                    }
                },
                "type": "object"
            },
            "AuthUserResponse": {
                "properties": {
                    "user": {
                        "$ref": "#/components/schemas/AuthUser"
                    },
                    "token": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "Meta": {
                "properties": {
                    "pagination": {
                        "properties": {
                            "total": {
                                "type": "integer"
                            },
                            "count": {
                                "type": "integer"
                            },
                            "per_page": {
                                "type": "integer"
                            },
                            "current_page": {
                                "type": "integer"
                            },
                            "total_pages": {
                                "type": "integer"
                            },
                            "links": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "ValidationError": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Error description"
                    },
                    "errors": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "type": "object"
            }
        }
    }
}